<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.pandawarrior.birthdaycardapp.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Happy Birthday PANDA!!"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="38sp"
        />
    <com.pandawarrior.birthdaycardapp.RoundNRoundView
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_centerInParent="true"
        app:speed="0.6"
        app:planet_color="@color/yellow"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        />
    <com.pandawarrior.birthdaycardapp.RoundNRoundView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        app:speed="0.8"
        app:planet_color="@color/green"
        />
    <com.pandawarrior.birthdaycardapp.RoundNRoundView
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_centerInParent="true"
        app:speed="1.0"
        app:planet_color="@color/red"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/panda"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/yay"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:textSize="32sp"
        android:layout_marginBottom="10dp"
        />



</RelativeLayout>
